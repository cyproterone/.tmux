#!/usr/bin/env bash

set -eu
set -o pipefail


cd "$(dirname "$0")/.." || exit 1


plugins="$(rg '^set -g @plugin' < tmux.conf)"
repos="$(sd 'set -g @plugin "([^"]+)"' '$1' <<< "$plugins")"


cd 'plugins' || exit 1


git_update() {
  local repo="$1"
  local dest="$(sd '[^/]+/' '' <<< "$repo")"
  if [[ -d "$dest" ]]
  then
    (
      cd "$dest" || exit 1
      git pull --no-rebase
    )
  else
    local uri="$(printf 'https://github.com/%s.git' "$repo")"
    git clone --depth=1 "$uri"
  fi
}


while read -r repo
do
  printf '%s\n' "$repo"
  git_update "$repo"
done <<< "$repos"

