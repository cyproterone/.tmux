#!/usr/bin/env bash

set -eu
set -o pipefail

cd "$(dirname "$0")/.." || exit 1

plugins="$(rg '^set -g @plugin' < tmux.conf)"
repos="$(echo "$plugins" | sd 'set -g @plugin "([^"]+)"' '$1')"


cd 'plugins' || exit 1


git_update() {
  local repo="$1"
  if [[ -d "$repo" ]]
  then
    (
      cd "$repo"
      git pull
    )
  else
    local uri="$(printf 'https://github.com/%s\n' "$repo")"
    git clone --depth=1 "$uri"
  fi
}
export -f git_update


echo "$repos" | xargs -l bash -c 'git_update "$@"' _
